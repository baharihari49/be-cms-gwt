{
  "name": "be-cms-get",
  "version": "1.0.0",
  "description": "be-for-cms-gwt",
  "license": "ISC",
  "author": "Bahari",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "seed": "tsx prisma/seed.ts",
    "seed:blog": "tsx prisma/seeders/blog.seeder.ts",
    "seed:portfolio": "tsx prisma/seeders/portfolio.seeder.ts",
    "seed:faq": "tsx prisma/seeders/faq.seeder.ts",
    "seed:services": "tsx prisma/seeders/service.seeder.ts",
    "seed:about": "tsx prisma/seeders/aboutus.seeder.ts",
    "seed:team": "tsx prisma/seeders/teamMember.seeder.ts",
    "seed:hero": "tsx prisma/seeders/hero.seeder.ts",
    "seed:contact": "tsx prisma/seeders/contact.seeder.ts",
    "build": "npm run schema:build && npm run db:generate && tsc",
    "start": "node dist/server.js",
    "dev": "npm run schema:build && ts-node-dev --respawn --transpile-only src/server.ts",
    "schema:build": "node scripts/build-schema.js",
    "schema:watch": "nodemon --watch prisma/models --watch prisma/schema.prisma --exec \"npm run schema:build\"",
    "schema:validate": "npm run schema:build && npm run prisma:validate",
    "prisma:validate": "node scripts/validate-schema.js",
    "db:generate": "npm run schema:build && prisma generate --schema=prisma/schema-combined.prisma",
    "db:push": "npm run schema:build && prisma db push --schema=prisma/schema-combined.prisma",
    "db:migrate": "npm run schema:build && prisma migrate dev --schema=prisma/schema-combined.prisma",
    "db:migrate:deploy": "npm run schema:build && prisma migrate deploy --schema=prisma/schema-combined.prisma",
    "db:studio": "npm run schema:build && prisma studio --schema=prisma/schema-combined.prisma",
    "db:reset": "npm run schema:build && prisma migrate reset --schema=prisma/schema-combined.prisma",
    "dev:watch": "concurrently \"npm run schema:watch\" \"npm run dev:server\"",
    "dev:server": "ts-node-dev --respawn --transpile-only src/server.ts"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.9.0",
    "bcrypt": "^6.0.0",
    "cloudinary": "^2.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemon": "^3.1.10",
    "resend": "^4.6.0",
    "winston": "^3.17.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.15.32",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "concurrently": "^9.1.2",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "prettier": "^3.5.3",
    "prisma": "^6.9.0",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
